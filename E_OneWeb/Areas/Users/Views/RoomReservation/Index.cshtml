@model E_OneWeb.Models.ViewModels.RoomReservationUserVM

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Riwayat Peminjaman";
}
<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-info ml-0 py-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="text-white py-2"> Daftar Ruang Kelas Tetap</h4>
                </div>
            </div>
        </div>
        <div class="card-body p-4">

            <div id="accordion" class="col-12 pt-2">
                <div class="col-12 pt-2">
                    <div class="card">
                        <div class="card-header d-md-flex justify-content-md-end">
                            <a class="btn" data-bs-toggle="collapse" href="#daftarruangtetap">
                                Daftar Ruangan yang tidak bisa digunakan  <i class="indicator fa fa-chevron-circle-down"></i>
                            </a>
                        </div>
                        <div class="collapse" id="daftarruangtetap">

                            <div class="panel-body" style="min-width:100%;overflow:scroll">
                                <div class="p-4 border rounded">
                                    <table id="tblDataRuangtetap" class="table table-striped table-bordered" style="width:100%">
                                        <thead class="thead-dark">
                                            <tr class="table-info">
                                                <th>
                                                    No
                                                </th>
                                                <th>
                                                    Hari
                                                </th>
                                                <th>
                                                    Jam
                                                </th>
                                                <th>
                                                    Nama Ruangan
                                                </th>
                                                <th>
                                                    Nama Gedung
                                                </th>
                                                <th>
                                                    Prodi
                                                </th>
                                                <th>
                                                    Mata Kuliah
                                                </th>
                                                <th>
                                                    Semester
                                                </th>
                                                <th>
                                                    Dosen UTS/UAS
                                                </th>

                                            </tr>
                                        </thead>
                                    </table>
                                </div>


                                <br />


                            </div>
                        </div>

                    </div>
                </div>



            </div>


        </div>
    </div>
</div>

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-info ml-0 py-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="text-white py-2"> @title</h4>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
           
            <div id="accordion" class="col-12 pt-2">
                <div class="col-12 pt-2">
                    <div class="card">
                        <div class="card-header d-md-flex justify-content-md-end">
                            <a class="btn" data-bs-toggle="collapse" href="#historytranfer">
                                Daftar Pinjam Ruangan  <i class="indicator fa fa-chevron-circle-down"></i>
                            </a>
                        </div>
                        <div class="collapse" id="historytranfer">

                            <div class="panel-body" style="min-width:100%;overflow:scroll">
                                <div class="p-4 border rounded">
                                    <table id="tblDataRoomReservationUser" class="table table-striped table-bordered" style="width:100%">
                                        <thead class="thead-dark">
                                            <tr class="table-info">
                                                <th>
                                                    Nama Ruangan
                                                </th>
                                                <th>
                                                    Tanggal Pinjam
                                                </th>
                                                <th>
                                                    Jam Pinjam
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th>
                                                    Keterangan
                                                </th>
                                                <th style="display:none">ID</th>

                                            </tr>
                                        </thead>
                                    </table>
                                </div>


                                <br />


                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-12 pt-2">
                    <div class="card">
                        <div class="card-header d-md-flex justify-content-md-end">
                            <a class="btn" data-bs-toggle="collapse" href="#historyservice">
                                Daftar Pinjam Kendaraan  <i class="indicator fa fa-chevron-circle-down"></i>
                            </a>
                        </div>
                        <div class="collapse" id="historyservice">

                            <div class="panel-body" style="min-width:100%;overflow:scroll">
                                <div class="p-4 border rounded">
                                    <table id="tblDataVehicleReservationUser" class="table table-striped table-bordered" style="width:100%">
                                        <thead class="thead-dark">
                                            <tr class="table-info">
                                                <th>
                                                    Nama Kendaraan
                                                </th>
                                                <th>
                                                    Tanggal Pinjam
                                                </th>
                                                <th>
                                                    Jam Pinjam
                                                </th>
                                                <th>
                                                    Tujuan
                                                </th>
                                                <th>
                                                    Keperluan
                                                </th>
                                                <th>
                                                    Supir
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th>
                                                    Keterangan
                                                </th>
                                                <th style="display:none">ID</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>

                                <br />


                            </div>
                        </div>

                    </div>
                </div>



            </div>


        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />	
	<script src="~/js/index_reservation_user.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            loadDataTableRuangTetap();
        });

        function loadDataTableRuangTetap() {
            var code = $('#searchCode').val();
            dataTable = $('#tblDataRuangtetap').DataTable({
                "order": [[0, "asc"]],
                "filter": true,
                "ajax": {
                    "url": "/Users/RoomReservation/GetAllRuangTetap"
                },
                "columns": [
                    { "data": "no", "autoWidth": true },
                    { "data": "days", "autoWidth": true },
                    { "data": "clock", "autoWidth": true },
                    { "data": "roomname", "autoWidth": true },
                    { "data": "locationname", "autoWidth": true },
                    { "data": "prodi", "autoWidth": true },
                    { "data": "study", "autoWidth": true },
                    { "data": "semester", "autoWidth": true },
                    { "data": "dosen", "autoWidth": true }
                ],
                "createdRow": function (row, data, index) {
                    $('td', row).eq(0).attr('style', 'text-align:center;');
                }
            });
        }

        $('.collapse').on('show.bs.collapse', function () {
            $(this).parent().find(".fa-chevron-circle-down").toggleClass("fa-chevron-circle-down fa-chevron-circle-up");
        }).on('hide.bs.collapse', function () {
            $(this).parent().find(".fa-chevron-circle-up").toggleClass("fa-chevron-circle-up fa-chevron-circle-down");
        });        
    </script>


}