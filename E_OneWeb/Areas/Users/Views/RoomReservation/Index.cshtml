@model E_OneWeb.Models.ViewModels.RoomReservationUserVM

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Pinjam Ruangan";
}

<br />

<div class="row">
    <div class="col-md-12">
       @* <div class="col-md-6">
            <h2 class="text-primary">@title </h2>
        </div>*@
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; @title</a>
        </div>
    </div>
</div>

<br />
<div class="panel-body" style="min-width:100%;overflow:scroll">
    <div class="p-4 border rounded">
        <table id="tblDataRoomReservationUser" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">

                    <th>
                        Nama Ruangan
                    </th>
                    <th>
                        Tanggal Pinjam
                    </th>
                    <th>
                        Tanggal Selesai
                    </th>
                    <th>
                        Status
                    </th>
                    <th style="min-width:100px"></th>
                </tr>
            </thead>
        </table>
    </div>

    <br />


</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/index_pinjamruangan_user.js"></script> 

        
}