@page
@model RegisterEmployeeModel
@using E_OneWeb.Utility
@{
    ViewData["Title"] = "Daftar Dosen/ Pegawai";
}

@*<h1>@ViewData["Title"]</h1>*@




<div class="py-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-8 offset-2">
           
            <div class="card shadow border-0 mt-4">
            
                <div class="card-body px-lg-5 pt-4">
                    <div class="card-header bg-light ml-0 py-1">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h3 class="text-success py-2"> @ViewData["Title"]</h3>
                            </div>
                        </div>
                    </div>
     
                    <form autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                       
                   @*     <h3 class="col-12 text-success text-center py-4">
                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                <strong>Register an User Account</strong>
                            }
                            else
                            {
                                <strong>Sign Up</strong>
                            }
                        </h3>*@
                      @*  <hr />*@
                        <div class="py-2">
                            <input asp-for="Input.Name" placeholder="User Login" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Input.FullName" placeholder="Nama Lengkap" class="form-control" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            @Html.DropDownListFor(m => m.Input.Gender, new List<SelectListItem>() {
                            new SelectListItem(){ Text = "Laki Laki" , Value="Laki Laki" },
                            new SelectListItem(){ Text = "Perempuan" , Value="Perempuan" }
                            }, "-- Select a Jenis Kelamin --",new { @class = "form-control", @id = "Gender" })
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>
                        <div class="py-2">                            
                            @Html.DropDownListFor(m => m.Input.CategoryEmployee, new List<SelectListItem>() {
                            new SelectListItem(){ Text = "Dosen" , Value="Dosen" },
                            new SelectListItem(){ Text = "Pegawai" , Value="Pegawai" }
                            }, new { @class = "form-control", @id = "CategoryEmployee" })
                        </div>
                        <div class="py-2">
                            <input asp-for="Input.WorkingUnit" placeholder="Unit Kerja" class="form-control" />
                            <span asp-validation-for="Input.WorkingUnit" class="text-danger"></span>

                        </div>
                      
                        <div class="py-2">                
                            <input asp-for="Input.PhoneNumber" type="text" placeholder="Number WA" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="py-2">         

                            <div class="form-floating py-2">
                                <input asp-for="Input.Photo" type="file" name="files" id="uploadBox" multiple class="form-control" placeholder="Photo Profile" />
                                <label class="form-label">Photo Profile</label>
                               
                            </div>
                            <span asp-validation-for="Input.Photo" class="text-danger"></span>
                        </div>
                        
                        <div class="form-row py-2">
                            <div class="col">
                                <input asp-for="Input.Password" type="password" placeholder="Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col py-2">
                                <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                        </div>
                     
                        <div class="py-2">
                            <button type="submit" class="btn btn-success form-control">Register</button>
                        </div>
                    </form>

                   
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
