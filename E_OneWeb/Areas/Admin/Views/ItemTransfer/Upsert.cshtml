@model E_OneWeb.Models.ViewModels.ItemTransferVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Transfer Item";
}
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<form method="post">
    <br />
    <div class="row p-3 border">
        <input type="hidden" value="@ViewBag.Status" id="idstatus" />
        <input type="hidden" asp-for="ItemTransfer.Id" id="transferid" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if ((Model.ItemTransfer.Id != 0 && @ViewBag.Status == "") || @ViewBag.Status == "Update Success")
        {
            //edit
            title = "Update Transfer Item";
          @*  <input type="hidden" asp-for="ItemTransfer.Id" id="transferid" />*@
            <input type="hidden" asp-for="ItemTransfer.PreviousLocationId" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="col-12 pt-2">
            <div class="form-group row">
                <div class="col-2">
                    Item
                </div>
                <div class="col-10">
    
                   
                    <div class="input-group">
                        <input type="hidden" asp-for="ItemTransfer.Items.Id" />
                        <input asp-for="ItemTransfer.Items.Name" id="ItemsName" class="form-control" disabled />           
                        
                        <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" style="width:145px" id="btn-lookupitems"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </div>                 
                </div>
            </div>

        </div> 

    
        <div class="col-12 pt-2">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ItemTransfer.Description"></label>
                </div>
                <div class="col-10">
                    <textarea asp-for="ItemTransfer.Description" class="form-control"></textarea>
                </div>
            </div>

        </div>

        <div class="col-12 pt-2">
            <div class="form-group row">
                <div class="col-2">
                    <label>Transfer Date</label>
                </div>
                <div class="col-10">
                    <input asp-for="ItemTransfer.TransferDate" class="form-control" type="date" />
                    <span asp-validation-for="ItemTransfer.TransferDate" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="col-12 pt-2">
            <div class="form-group row">
                <div class="col-2">
                    Previous Location
                </div>
                <div class="col-10">
                    <input type="hidden" asp-for="ItemTransfer.PreviousLocationId" />
                    <input asp-for="ItemTransfer.PreviousLocation" class="form-control" style="row-gap" id="roomName" disabled />
                @*    @Html.DropDownListFor(Model => Model.ItemTransfer.PreviousLocationId , ViewBag.PreviousLocationList as SelectList, "-Select a Location",
                    new { @Class = "form-control", @id = "PreviousLocation", @disabled = "disabled"  })
                    <span asp-validation-for="ItemTransfer.PreviousLocation" class="text-danger"></span>*@
                </div>
            </div>

        </div>
        <div class="col-12 pt-2">
            <div class="form-group row">
                <div class="col-2">
                    Current Location
                </div>
                <div class="col-10">
                    @Html.DropDownListFor(Model => Model.ItemTransfer.CurrentLocationId , ViewBag.CurrentLocationList as SelectList, "-Select a Location",
                    new { @Class = "form-control" })
                    <span asp-validation-for="ItemTransfer.CurrentLocationId" class="text-danger"></span>
                </div>
            </div>

        </div>

        <br />
@*        <div class="col-12 pt-2">
            <div class="form-group row">
                <div class="col-6 offset-2">


                    <div class="row">
                        <div class="col">
                            <button type="submit" id="btnSave" class="btn btn-primary form-control" style="width:145px">@title.Replace("Transfer Item","")</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control" style="width:145px">Back to List</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>*@

        <div class="form-group margin-bottom-2 pt-2">
            <div class="col-md-12 text-center">
                <button type="submit" id="btnSave" class="btn btn-primary form-control" style="width:145px">@title.Replace("Transfer Item","")</button>
                <a asp-action="Index" class="btn btn-success form-control" style="width:145px">Back to List</a>
            </div>
        </div>


    </div>
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Choose Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <br />
                <div class="p-4 border rounded">
                    <table id="tblData" class="table table-striped table-bordered table-hover table-striped dataTable" style="width:100%">
                        <thead class="thead-dark">
                            <tr class="table-info">
                                <th>
                                    Item Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Location
                                </th>                             

                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
           @* <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Add</button>
            </div>*@
        </div>
    </div>
</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />
	<script src="~/js/GetItems.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            LoadIndex();
            var status = $("#idstatus").val();

            if (status != "") {
                toastr.options.timeOut = 1500;
                toastr.success(status);
                $("#btnSave").attr("disabled", "disabled");

            }
            var transferidId = $('#transferid').val();
            if (transferidId == 0) {
                $("#btn-lookupitems").removeAttr("disabled");
            }
            else {
                $("#btn-lookupitems").attr("disabled", "disabled");
            }
        });

        function LoadIndex() {
            dataTable = $('#indextable').DataTable({
                "ajax": {
                    "url": "/Admin/ItemTransfer/GetProduct"
                },
                "columns": [
                    { "data": "name", "width": "30%" },
                    { "data": "category", "width": "20%" },
                    { "data": "room", "width": "20%" }

                ],
                "createdRow": function (row, data, index) {
                    $(row).attr('onclick', 'select_row(this)');
                    $(row).attr('data-dismiss', 'modal');
                    $('#ItemsNameVal').val('tdsssss');
                }
            });
        }       
 

        if ($("#transferid").val() > 0) {
            $("#itemid").attr("disabled", "disabled");
            $("#PreviousLocation").attr("disabled", "disabled");
        }

    
    </script>
}


    
	


