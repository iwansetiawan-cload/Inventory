                                        </tr>
                                    </thead>
                                </table>
                            </div>


                            <br />


                        </div>
                    </div>

                </div>
              
                <div class="card">
                    <div class="card-header d-md-flex justify-content-md-end">
                        <a class="btn" data-bs-toggle="collapse" href="#historyservice">
                            History Service  <i class="indicator fa fa-chevron-circle-down"></i>
                        </a>
                    </div>
                    <div class="collapse" id="historyservice">

                        <div class="panel-body" style="min-width:100%;overflow:scroll">
                            <div class="p-4 border rounded">
                                <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                                    <thead class="thead-dark">
                                        <tr class="table-info">

                                            <th>
                                                Item Name
                                            </th>
                                            <th>
                                                Description
                                            </th>
                                            <th>
                                                Previous Location
                                            </th>
                                            <th>
                                                Current Location
                                            </th>
                                            <th>
                                                Transfer Date
                                            </th>


                                            <th style="min-width:100px"></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>


                            <br />


                        </div>
                    </div>

                </div>





            </div>
        }
        
        
    </div>
