	<script src="~/js/transferitembyid.js"></script>
    <script type="text/javascript">

        function changesqty() {           
            var a = $('#qty').val();
            var b = $('#price').val();
            var c = a * b; 
            $('#totalamount').val(c);
            $('#TotalAmount_').val(c);
        }
       
        //function changespercent() {
        //    var a = $('#totalamount').val();
