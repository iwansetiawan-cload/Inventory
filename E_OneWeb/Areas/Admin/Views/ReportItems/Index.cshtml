        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="col-12 pt-4">
            <div class="form-group row pt-2">
                
                <div class="col-6">
                    <div class="form-group row">
                        <div class="col-3">
                        <label asp-for="Items.Code"></label>
                        </div>
                        <div class="col-9">
                        <input asp-for="Items.Code" class="form-control" style="row-gap" />
                        <span asp-validation-for="Items.Code" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="col-6">                  
                    <div class="form-group row">
                        <div class="col-3">
                            Ownership
                        </div>

                        <div class="col-9">
                            @Html.DropDownListFor(Model => Model.Items.OriginOfGoods, ViewBag.OwnershipList as SelectList, "- Select a Ownership -", new { @class = "form-control" })
                            <span asp-validation-for="Items.OriginOfGoods" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-6">
                    <div class="form-group row">
                        <div class="col-3">
                            Category
                        </div>
                        <div class="col-9">
                            @Html.DropDownListFor(Model => Model.Items.CategoryId , Model.CategoryList, "- Select a Category -",
                            new { @Class = "form-control", @id="SearchCategory"})
                            <span asp-validation-for="Items.CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                </div>            

                <div class="col-6">

                    <div class="form-group row">
                        <div class="col-3">
                            Status
                        </div>

                        <div class="col-9">
                            @Html.DropDownListFor(model => model.Items.Status, ViewBag.StatusList as SelectList, "- Select a Status -", new { @class = "form-control" })
                            <span asp-validation-for="Items.Status" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

      
            <div class="form-group row py-4">
                <div class="col-md-12 text-center">
                    <button class="btn btn-primary" type="submit" style="width:145px">Search</button>
                    <button class="btn btn-secondary" type="button"  style="width:145px">Clear</button>

                </div>
            </div>

            <div class="row py-2">
                <div class="col-md-12">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button class="btn btn-primary" type="button" title="Download file" onclick="Export()" id="exportfile">Download <i class="fas fa-file-export"></i></button>
                    </div>

                </div>
            </div>


        </div>


    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">                   
                    <th>
                        Code
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Name Of Room
                    </th>                   
                    <th>
                        Price
                    </th>
                    <th>
                        Qty
                    </th>
                    <th>
                        Total Amount
                    </th>
                </tr>
            </thead>
        </table>
    </div>
      
    </div>



