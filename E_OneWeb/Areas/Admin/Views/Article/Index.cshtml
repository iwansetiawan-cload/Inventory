@model E_OneWeb.Models.ViewModels.ArticleVM


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Article";
}

<br />
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <h2 class="text-primary">Article List </h2>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Article</a>
        </div>
    </div>
   
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    Title
                </th>
                <th>
                    Point
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Entry Date
                </th>               
                <th>
                    Points Source
                </th>
                <th style="min-width:100px"></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/js/article.js"></script>
}