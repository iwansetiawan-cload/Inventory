@model E_OneWeb.Models.ViewModels.ItemsVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <h2 class="text-primary">Daftar Servis </h2>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Tambah Servis</a>
        </div>
    </div>
</div>

<br />
<div class="p-4 border rounded" style="min-width:100px;overflow:scroll;">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">             
                <th>
                    Nama Aset
                </th>
                <th>
                    Lokasi
                </th>
                <th>
                    Tanggal Servis
                </th>
                <th>
                    Tanggal Selesai
                </th>               
                <th>
                    Permintaan
                </th>
                <th>
                    Nilai Servis
                </th>
                <th>
                    Status
                </th>
                <th>
                    Catatan
                </th>
                <th>
                    Approve BY
                </th>
                <th>
                    Approve Date
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/index_serviceitem.js"></script>
}


